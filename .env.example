# Application settings
APP_NAME=PDF_Splitter
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# File processing
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=.pdf
TEMP_DIR=/tmp/pdf_splitter
OUTPUT_DIR=./output

# OCR settings
OCR_ENGINE=paddleocr  # Options: paddleocr, easyocr, tesseract
OCR_LANG=en
OCR_CACHE_ENABLED=True
OCR_CACHE_DIR=./ocr_cache

# LLM settings
LLM_PROVIDER=transformers  # Options: transformers, ollama
LLM_MODEL=facebook/bart-large-mnli
LLM_MAX_CONTEXT=512
LLM_TEMPERATURE=0.1

# LLM Detector specific settings (when using Ollama)
LLM_MODEL_NAME=gemma3:latest  # Ollama model for boundary detection
LLM_OLLAMA_URL=http://localhost:11434
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_BOTTOM_LINES=20
LLM_TOP_LINES=20
LLM_PROMPT_VERSION=gemma3_optimal

# LLM Cache settings
LLM_CACHE_ENABLED=true
LLM_CACHE_PATH=~/.cache/pdf_splitter/llm_cache.db
LLM_CACHE_MAX_AGE_DAYS=90
LLM_CACHE_MAX_SIZE_MB=500

# Performance settings
MAX_WORKERS=4
BATCH_SIZE=10
CHUNK_SIZE=5  # Pages to process at once

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
SECRET_KEY=your-secret-key-here

# Database (for future use)
DATABASE_URL=sqlite:///./pdf_splitter.db

# External services (optional)
